<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.lab05.CourtCounterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_team_logo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center" />

        <TextView
        android:id="@+id/tv_tema_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:gravity="center"
        android:text="隊名" />

    <TextView
        android:id="@+id/tv_tema_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="0"
        android:textSize="56sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_three_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="?attr/colorPrimary"
        android:text="+3分球"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/font_size" />

        <Button
            android:id="@+id/btn_two_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="?attr/colorPrimary"
            android:text="+2分球"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/font_size" />

        <Button
        android:id="@+id/btn_free_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="?attr/colorPrimary"
        android:text="罰球"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/font_size" />

    </LinearLayout>

</FrameLayout>
